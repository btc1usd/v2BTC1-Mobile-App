{
  "cli": {
    "version": ">= 7.8.0",
    "appVersionSource": "remote"
  },
  "build": {
    "preview": {
      "node": "22.11.0",
      "pnpm": "9.12.0",
      "env": {
        "NODE_OPTIONS": "--max-old-space-size=4096"
      },
      "android": {
        "buildType": "apk",
        "cache": {
          "key": "preview-cache",
          "cacheDefaultPaths": false,
          "paths": [
            "node_modules"
          ]
        }
      },
      "ios": {
        "simulator": false,
        "buildConfiguration": "Release"
      }
    },
    "development": {
      "pnpm": "9.12.0",
      "android": {
        "buildType": "apk",
        "gradleCommand": ":app:assembleDebug"
      },
      "ios": {
        "simulator": true,
        "buildConfiguration": "Debug"
      }
    },
    "production": {
      "pnpm": "9.12.0",
      "android": {
        "buildType": "app-bundle"
      },
      "ios": {
        "simulator": false,
        "buildConfiguration": "Release"
      }
    }
  },
  "submit": {
    "production": {
      "android": {
        "serviceAccountKeyPath": "./google-play-service-account.json",
        "track": "internal"
      }
    }
  }
}
